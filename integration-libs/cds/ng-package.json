{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/cds",
  "lib": {
    "entryFile": "./public_api.ts",
    "umdModuleIds": {
      "@ngrx/store": "store",
      "rxjs": "rxjs",
      "@spartacus/core": "core",
      "@spartacus/storefront": "storefront",
      "@spartacus/tracking/personalization/core": "personalization",
      "@spartacus/checkout": "checkout",
      "@spartacus/checkout/base/root": "checkoutRoot",
      "@spartacus/cart/base/root": "cartRoot",
      "@spartacus/order/root": "orderRoot"
